#!/usr/bin/env ruby

$:.unshift File.expand_path(File.dirname(__FILE__)+"/../lib/")

require 'ninja-bot'

config = {
  :nick    => "NinjaBot",
  :server  => "irc.freenode.net",
  :port    => 6667,
  :realname => 'Bot',
  :verbose  => true,
  :version  => 'NinjaBot v0.0.1'}

NinjaBot.new(config, "#ninja-bot").start
